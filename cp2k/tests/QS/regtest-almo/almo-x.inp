&GLOBAL
  PROJECT hex-ice 
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  &DFT
    POTENTIAL_FILE_NAME ../GTH_POTENTIALS
    BASIS_SET_FILE_NAME ../GTH_BASIS_SETS
    &QS
      ALMO_SCF T
      EPS_DEFAULT 1.0E-8 ! 1.0E-12
    &END QS
    &ALMO_SCF
      EPS_FILTER                 1.0E-9
      BLOCKED_MAX_ITER           100
      BLOCKED_EPS_ITER           5.0E-4 ! 5.0E-6
      BLOCKED_N_DIIS             7
      DELOCALIZE_METHOD          X_R
      DELOCALIZE_ALGORITHM       PCG
      DELOCALIZE_MAX_ITER        100
      DELOCALIZE_EPS_ITER        5.0E-4 ! 5.0E-6
      DELOCALIZE_EPS_LIN_SEARCH  1.0E-2
      DELOCALIZE_CONJUGATOR      POLAK_RIBIERE
      DELOCALIZE_R_CUTOFF_FACTOR 1.6
    &END ALMO_SCF
    &MGRID
      CUTOFF 200 ! 320
      NGRIDS 5
    &END MGRID
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
@INCLUDE 'ice.cell'
      MULTIPLE_UNIT_CELL 1 1 1 
    &END CELL
    &TOPOLOGY
      MULTIPLE_UNIT_CELL 1 1 1
    &END
    &COORD
@INCLUDE 'ice.xyz'
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH 
      POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-BLYP-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

