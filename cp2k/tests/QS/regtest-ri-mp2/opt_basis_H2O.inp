&GLOBAL                                                                                           
  PROJECT  H2O_opt_basis_RI
  PRINT_LEVEL LOW
  RUN_TYPE ENERGY
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME  ../HFX_BASIS
    POTENTIAL_FILE_NAME  ../GTH_POTENTIALS
    &MGRID
      CUTOFF     100
      REL_CUTOFF  20
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-15
      EPS_PGF_ORB 1.0E-30
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF   1.0E-6
      MAX_SCF   100
    &END SCF
    &XC
      &XC_FUNCTIONAL NONE
      &END XC_FUNCTIONAL
      &HF
        FRACTION 1.0000000
        &SCREENING
          EPS_SCHWARZ 1.0E-7
          SCREEN_ON_INITIAL_P FALSE 
        &END SCREENING
      &END HF
      &WF_CORRELATION
        METHOD  OPTIMIZE_RI_BASIS
        &OPT_RI_BASIS
          DELTA_I_REL  5.0E-6
          DELTA_RI     5.0E-5
          EPS_DERIV    1.0E-2
          MAX_ITER     100
        &END
        NUMBER_PROC  1
      &END
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom]  10.000   10.000  10.000
      PERIODIC NONE
    &END CELL
    &KIND H
      BASIS_SET         DZVP-GTH
      RI_AUX_BASIS_SET  RI_DZ_init
      POTENTIAL         GTH-HF-q1
    &END KIND
    &KIND O
      BASIS_SET         DZVP-GTH
      RI_AUX_BASIS_SET  RI_DZ_init
      POTENTIAL         GTH-HF-q6
    &END KIND
    &TOPOLOGY
      COORD_FILE_NAME  H2O_gas.xyz
      COORD_FILE_FORMAT xyz
      &CENTER_COORDINATES
      &END
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
