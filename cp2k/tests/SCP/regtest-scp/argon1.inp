&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &MGRID
      COMMENSURATE
      &RS_GRID
        DISTRIBUTION_TYPE REPLICATED
      &END RS_GRID
      CUTOFF 100
    &END MGRID
    &SCP T
      DISPERSION T
    &END SCP
    &QS
      WF_INTERPOLATION PS
      EXTRAPOLATION_ORDER 3
    &END QS
    &SCF
      &OUTER_SCF
        EPS_SCF 1.E-4
        MAX_SCF 50
        TYPE SCP
      &END OUTER_SCF
      SCF_GUESS ATOMIC
      MAX_SCF 50
      EPS_SCF 1.000E-4
      &OT T
        SCP_DFT T
        MINIMIZER CG
      &END OT
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
     &XC_GRID
       XC_SMOOTH_RHO  NN10
       XC_DERIV  SPLINE2_SMOOTH
     &END XC_GRID
    &END XC
    POTENTIAL_FILE_NAME ../../QS/GTH_POTENTIALS
    BASIS_SET_FILE_NAME ../test_basis_water
  &END DFT
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
    &END CELL
    &COORD
Ar         0.0000000000         0.0000000000         1.0000000000
    &END COORD
    &KIND Ar
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-BLYP-q8
      AUX_BASIS_SET aux-scp
      ALPHA_SCP 0.000291
      I_SCP 7.954
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT argon1
  RUN_TYPE ENERGY_FORCE
  PRINT_LEVEL LOW
&END GLOBAL
