&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &QS
      LS_SCF
    &END QS
    &POISSON
      PERIODIC NONE
      PSOLVER  MT
    &END POISSON
    &LS_SCF
      MAX_SCF     25
      EPS_SCF     1.0E-8
      S_PRECONDITIONER  NONE
      REPORT_ALL_SPARSITIES OFF
      PURIFICATION_METHOD TRS4
      EXTRAPOLATION_ORDER  1
      &PAO
        MAX_PAO 1
        EPS_PAO 5.0E-9
        PARAMETERIZATION ROTINV
        PRECONDITIONER SINV
        CHECK_GRADIENT_TOL 0.01
        CHECK_GRADIENT_ABORT ON
        READ_RESTART H2_pao_rotinv-1_0.pao
        &LINE_SEARCH
          METHOD 3PNT
        &END LINE_SEARCH
      &END PAO
    &END
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
      PERIODIC NONE
    &END CELL
    ! rotate system by a non-trivial angle
    &COORD
      H       0.3452    0.6319    0.0
      H       0.0       0.0       0.0
    &END COORD
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
      PAO_BASIS_SIZE 1 
      PAO_POTENTIAL_MAXL 0
    &END KIND
    &TOPOLOGY
       &CENTER_COORDINATES
       &END
    &END
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT H2_pao_rotinv
  RUN_TYPE ENERGY
&END GLOBAL
